<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="590dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/clubImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ski"
            android:padding="8dp" />

        <TextView
            android:id="@+id/clubName"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_above="@+id/clubDescription"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_vertical"
            android:text="SKI Club"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/descriptionText"
            android:textColor="#000000"
            android:layout_width="380dp"
            android:layout_height="31dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="453dp"
            android:text="Description" />

        <TextView
            android:id="@+id/photosText"
            android:layout_width="380dp"
            android:layout_height="31dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="370dp"
            android:text="Photos"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/clubDescription"
            android:layout_width="376dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="413dp"
            android:inputType="textMultiLine"
            android:text="The ski club is the where you can have fun and meet new friends. Come and ski with us on Saturdays in winter!" />

        <ImageView
            android:id="@+id/clubImage1"
            android:layout_width="155dp"
            android:layout_height="158dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="227dp"
            app:srcCompat="@drawable/skingclub" />

        <ImageView
            android:id="@+id/clubImage2"
            android:layout_width="155dp"
            android:layout_height="158dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="233dp"
            android:layout_marginLeft="233dp"
            android:layout_marginBottom="226dp"
            app:srcCompat="@drawable/skingclub" />

    </RelativeLayout>

</LinearLayout>
